@page "/"
@rendermode InteractiveServer
@layout Arcade.Components.Layout.MainLayout

<PageTitle>Arcade</PageTitle>

<section class="home-intro">
    <span class="home-intro__eyebrow">Arcade</span>
    <h1>Wähle dein Spiel</h1>
    <p class="home-intro__subtitle"> </p>
</section>

<section class="game-grid" aria-label="Spielauswahl">
    <article class="game-card game-card--featured">
        <div class="game-card__header">
            <h2>Tetris</h2>
            <span class="status status--online">Play now!</span> 
            @* Verfügbar Bald   *@
        </div>
        <p class="game-card__description">Staple Tetrominos, löse Linien im Tempo und stelle dich unserem Arcade-Speed-Modus.</p>
        <div class="game-card__footer">
            <NavLink class="game-card__button" href="/tetris">Jetzt spielen</NavLink>
        </div>
    </article>

    <article class="game-card game-card--featured">
        <div class="game-card__header">
            <h2>Snake</h2>
            <span class="status status--online">Play now!</span>
        </div>
        <p class="game-card__description">Führe deine Schlange durch das Raster und knacke deinen Highscore.</p>
        <div class="game-card__footer">
            <NavLink class="game-card__button game-card__button--ghost game-card__button--offline" aria-disabled="true" href="/snake">Jetzt spielen</NavLink>
        </div>
    </article>

    <article class="game-card game-card--featured">
        <div class="game-card__header">
            <h2>Minesweeper</h2>
            <span class="status status--offline">Bald</span>
        </div>
        <p class="game-card__description">minesweeper</p>
        <div class="game-card__footer">
            <NavLink class="game-card__button game-card__button--ghost game-card__button--offline" aria-disabled="true" href="/minesweeper">Bald verfügbar</NavLink>
        </div>
    </article>

    <article class="game-card game-card--featured">
            <div class="game-card__header">
                <h2>Tower Defense</h2>
                <span class="status status--offline">Bald</span>
            </div>
            <p class="game-card__description">Defend your Castle with towers</p>
            <div class="game-card__footer">
                <NavLink class="game-card__button game-card__button--ghost game-card__button--offline" aria-disabled="true" href="/towerdef">Bald verfügbar</NavLink>
            </div>
        </article>

     <article class="game-card game-card--featured">
        <div class="game-card__header">
            <h2>Slither</h2>
            <span class="status status--upcoming">Nicht verfügbar</span>
        </div>
        <p class="game-card__description">Slither - die arme Kopie</p>
        <div class="game-card__footer">
            <NavLink class="game-card__button game-card__button--ghost game-card__button--offline" aria-disabled="true" href="/slither">Jetzt spielen</NavLink>
        </div>
    </article>

    @*      <article class="game-card game-card--featured">
        <div class="game-card__header">
            <h2>Spiel 6</h2>
            <span class="status status--upcoming">Bald</span>
        </div>
        <p class="game-card__description">Hier entsteht ein neues Erlebnis für den Hub. Update folgt.</p>
        <div class="game-card__footer">
            <NavLink class="game-card__button game-card__button--disabled" href="/spiel6">Mehr erfahren</NavLink>
        </div>
    </article> *@
</section>
