@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Nav

<div class="layout">
    <header class="layout__header">
        <NavLink class="layout__brand" href="/" Match="NavLinkMatch.All">Arcade</NavLink>

        <nav class="layout__nav" aria-label="Spielnavigation">
            <NavLink class="layout__nav-link" href="/tetris">Tetris</NavLink>
            <NavLink class="layout__nav-link" href="/billiard">Billiard</NavLink>
            <NavLink class="layout__nav-link" href="/snake">Snake</NavLink>
            <NavLink class="layout__nav-link" href="/schach">Schach</NavLink>
        </nav>

        <div class="layout__login">
            <AuthorizeView>
                <Authorized Context="auth">
                    <button type="button"
                            class="layout__user"
                            @onclick="GoProfile">
                        @auth.User.Identity?.Name
                    </button>
                </Authorized>

                <NotAuthorized>
                    <NavLink class="layout__login-link" href="/anmelden">Anmelden</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </header>

    <main class="layout__main">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Ein unbehandelter Fehler ist aufgetreten.
    <a href="." class="reload">Neu laden</a>
    <span class="dismiss">ðŸ—™</span>
</div>

@code {
    private void GoProfile()
        => Nav.NavigateTo("/profil");
}
